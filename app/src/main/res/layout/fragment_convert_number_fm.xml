<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ConvertNumberFM">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <Spinner
            android:id="@+id/number_Option_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/number_outputTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="Decimal: " />

                <TextView
                    android:id="@+id/decimal_ouput_TV"
                    style="@style/number_outputTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/number_outputTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="Binary: " />

                <TextView
                    android:id="@+id/binary_ouput_TV"
                    style="@style/number_outputTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/number_outputTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="Octal: " />

                <TextView
                    android:id="@+id/octal_ouput_TV"
                    style="@style/number_outputTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/number_outputTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="Hexa: " />

                <TextView
                    android:id="@+id/hexa_ouput_TV"
                    style="@style/number_outputTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/binary_extaras_output_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TextView
                    style="@style/number_outputTextView"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="5dp"
                    android:text="1s Complement: " />

                <TextView
                    android:id="@+id/_1s_complement_output_tv"
                    style="@style/number_outputTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TextView
                    style="@style/number_outputTextView"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingRight="5dp"
                    android:text="2s Complement: " />

                <TextView
                    android:id="@+id/_2s_complement_output_tv"
                    style="@style/number_outputTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clearButton"
                    style="@style/button_Style"
                    android:layout_width="103dp"
                    android:layout_height="40dp"
                    android:text="CE" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    style="@style/button_Style"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="103dp"
                    android:layout_height="40dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/_0"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="0" />

                <Button
                    android:id="@+id/_A"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="A" />

                <Button
                    android:id="@+id/_B"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="B" />

                <Button
                    android:id="@+id/_C"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="C" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/_1"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="1" />

                <Button
                    android:id="@+id/_2"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="2" />

                <Button
                    android:id="@+id/_3"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="3" />

                <Button
                    android:id="@+id/_D"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="D" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/_4"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="4" />

                <Button
                    android:id="@+id/_5"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="5" />

                <Button
                    android:id="@+id/_6"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="6" />

                <Button
                    android:id="@+id/_E"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="E" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/_7"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="7" />

                <Button
                    android:id="@+id/_8"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="8" />

                <Button
                    android:id="@+id/_9"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="9" />

                <Button
                    android:id="@+id/_F"
                    style="@style/button_Style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="F" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>